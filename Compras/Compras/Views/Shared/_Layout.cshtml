    <script>

        function inscribirse() {
            $("#inscripcion").css("display", "block");
            $("#botoncerrar").text("Enviar y Cerrar");
        }

        function observatorioMostrar() {
            $("#menu").addClass("menu-muestra");
            $("#cerrar").addClass("block");

        }
        function observatorioOcultar() {
            $("#menu").removeClass("menu-muestra");
            $("#cerrar").removeClass("block");
        }

        function tooltip(aux) {
            switch (aux) {
                case 1:
                    $("#data").css("display", "none");
                    $("#sobre").css("display", "block");
                    $("#tooltip").addClass('block').outerWidth();
                    $("#tooltip").addClass('show');
                    break;
                case 2:
                    $("#sobre").css("display", "none");
                    $("#data").css("display", "block");
                    $("#tooltip").addClass('block').outerWidth();
                    $("#tooltip").addClass('show');
                    break;
            }
        }
        function tooltipClose() {
            var email = $("#email").val();
            var whatsapp = $("#whatsapp").val();
            $("#email").val("");
            $("#whatsapp").val("");
            if (email != "" || whatsapp != "") {
                $.ajax({
                    cache: false,
                    async: false,
                    type: 'POST',
                    data: {
                        email: email,
                        whatsapp: whatsapp
                    },
                    url: '../../GobiernoCentral/Inscribir',
                    dataType: 'json',
                    success: function (data) {
                        if (data == true) {
                            $("#botoncerrar").text("Cerrar");
                        }
                    }
                });
            }
            $("#inscripcion").css("display", "none");
            $("#botoncerrar").text("Cerrar");
            $("#tooltip").removeClass("block show");
            $("#sobre").css("display", "none");
            $("#data").css("display", "none");
        }

        $(".tooltip-full").click(function () {
            tooltipClose();
        });
        $('.tooltip').click(function (e) {
            e.stopPropagation();
        });

        function compartir(aux) {
            var url = "";
            switch (aux) {
                case 2:
                    url = "https://twitter.com/?status=";
                    url = url + "Me gusta esta página " + window.location.href;
                    break;
                case 1:
                    url = "https://www.facebook.com/sharer/sharer.php?u=";
                    url = url + window.location.href;
                    break;
            }
            windowObjectReference = window.open(
                url,
                "DescriptiveWindowName",
                "resizable,scrollbars,status"
            );
        }

        function Sumate(aux) {
            var url = "https://twitter.com/?status= Yo me sumo!! Chile deberá tener un registro de dueños finales de empresas y este registro deberá ser transparente para empresas que hacen negocios con el Estado.  @@Ch_Transparente @@EsPublicoCL @@observafiscalcl %23BeneficialOwnership https://compras.observatoriofiscal.cl";
            windowObjectReference = window.open(
                url,
                "DescriptiveWindowName",
                "resizable,scrollbars,status"
            );
        }

    </script>

